{
  "name": "nlo-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && nest build && node tools/prepare-function-package.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:emulator": "firebase emulators:start --only firestore --project dev-needlist",
    "deploy:dev": "cross-env NODE_ENV=development npm run build && firebase use default && firebase deploy --only functions",
    "deploy:staging": "cross-env NODE_ENV=staging npm run build && firebase use staging && firebase deploy --only functions",
    "deploy:prod": "cross-env NODE_ENV=production npm run build && firebase use production && firebase deploy --only functions",
    "deploy:infositedev": "cross-env NODE_ENV=infositedev NLO_ENV=infositedev dotenv -e .env.infositedev npm run build && firebase use infositedev && firebase deploy --only functions",
    "lint": "tsc --noEmit && eslint .",
    "fmt": "eslint --fix .; dprint fmt",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@fastify/static": "^8.3.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "@sparticuz/chromium": "^143.0.0",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.3",
    "dprint": "^0.50.2",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^7.0.1",
    "handlebars": "^4.7.8",
    "puppeteer": "^24.34.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^20.0.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "firebase-tools": "^14.24.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "node-fetch": "^3.3.2",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "modulePathIgnorePatterns": [
      "create_testing_module\\.spec\\.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
